        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Project1932"
        android:enableOnBackInvokedCallback="true"
        tools:targetApi="31">
        <activity
            android:name=".Activity.RegisterAccountActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.MainActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.WorkoutActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.UserWorkoutDetailActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.SessionActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.ExerciseActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.EditWorkoutActivity"
            android:exported="false" />
        <activity android:name=".Activity.ChallengeDetailActivity"
            android:exported="false"
            />
        <activity
            android:name=".Activity.ForgotPasswordActivity"
            android:exported="false"/>

        <activity
            android:name=".Activity.EditGoalsActivity"
            android:exported="false"/>
        <activity
            android:name=".Activity.RegistrationInfoActivity"
            android:exported="false"/>
        <activity
            android:name=".Activity.EditProfileActivity"
            android:exported="false"/>
        <activity
            android:name=".Activity.CreatePostActivity"
            android:exported="false"/>
        <activity
            android:name=".Activity.PostDetailActivity"
            android:exported="false"/>
        <activity
            android:name=".Activity.ImageGalleryActivity"
            android:exported="false"
            android:theme="@style/Theme.ImageGallery" />
        <activity
            android:name=".Activity.UserProfileActivity"
            android:exported="false"/>
        <activity
            android:name=".Activity.PlanPreviewActivity"
            android:theme="@style/HomeWorkoutTheme" />
        <activity
            android:name=".Activity.WorkoutHistoryActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.SessionResultActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.CompletedExerciseActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.AchievementsActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.SearchActivity"
