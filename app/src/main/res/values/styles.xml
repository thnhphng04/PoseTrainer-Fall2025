<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CalendarDay">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#8a000000</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="CalendarDaySelected" parent="CalendarDay">
        <item name="android:textColor">#ff004aff</item>
        <item name="android:background">@drawable/calendar_selected_bg</item>
    </style>

    <style name="TabSelected">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#de000000</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TabUnselected" parent="TabSelected">
        <item name="android:textColor">#8a000000</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="DayButtonActive">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginHorizontal">4dp</item>
        <item name="android:background">@drawable/day_button_active_bg</item>
        <item name="android:text">1</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="DayButtonInactive" parent="DayButtonActive">
        <item name="android:background">@drawable/day_button_inactive_bg</item>
        <item name="android:textColor">#8a000000</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ArrowIcon">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:src">@drawable/ic_arrow_forward</item>
        <item name="android:tint">#ff004aff</item>
    </style>

    <style name="ArrowIconInactive" parent="ArrowIcon">
        <item name="android:tint">#8a000000</item>
    </style>

    <style name="TrophyIcon">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:src">@drawable/ic_trophy</item>
        <item name="android:tint">#ffffa000</item>
    </style>

    <style name="TrophyIconInactive" parent="TrophyIcon">
        <item name="android:tint">#8a000000</item>
    </style>
</resources>