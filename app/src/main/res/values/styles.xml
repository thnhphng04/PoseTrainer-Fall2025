<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- HomeWorkout Theme -->
    <style name="HomeWorkoutTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/hw_primary</item>
        <item name="colorPrimaryDark">@color/hw_primary_dark</item>
        <item name="colorAccent">@color/hw_accent</item>
        <item name="android:windowBackground">@color/hw_background</item>
        <item name="colorSurface">@color/hw_surface</item>
        <item name="colorOnSurface">@color/hw_text_primary</item>
    </style>

    <!-- BASE STYLES -->
    <style name="HW" />

    <style name="HW.Text" />

    <style name="HW.Button" />

    <style name="HW.Calendar" />

    <style name="HW.Tab" />

    <style name="HW.Challenge" />

    <!-- Text Styles -->
    <style name="HW.Text.Title">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/hw_text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="HW.Text.Subtitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/hw_text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="HW.Text.Body">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/hw_text_primary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="HW.Text.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/hw_text_secondary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Button Styles -->
    <style name="HW.Button.Primary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/hw_button_primary</item>
        <item name="android:textColor">@color/hw_text_white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="HW.Button.Secondary" parent="HW.Button.Primary">
        <item name="android:background">@drawable/hw_button_secondary</item>
        <item name="android:textColor">@color/hw_primary</item>
    </style>

    <!-- Card Styles -->
    <style name="HW.Card">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">@color/hw_surface</item>
    </style>

    <style name="HW.Card.Challenge" parent="HW.Card">
        <item name="cardCornerRadius">16dp</item>
    </style>

    <!-- Calendar Styles -->
    <style name="CalendarDay">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#8a000000</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="CalendarDaySelected" parent="CalendarDay">
        <item name="android:textColor">#ff004aff</item>
        <item name="android:background">@drawable/hw_calendar_selected</item>
    </style>

    <style name="HW.Calendar.Day">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/hw_text_secondary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="HW.Calendar.Day.Selected" parent="HW.Calendar.Day">
        <item name="android:textColor">@color/hw_primary</item>
        <item name="android:background">@drawable/hw_calendar_selected</item>
    </style>

    <!-- Tab Styles -->
    <style name="TabSelected">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#de000000</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TabUnselected" parent="TabSelected">
        <item name="android:textColor">#8a000000</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="HW.Tab.Selected">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/hw_text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="HW.Tab.Unselected" parent="HW.Tab.Selected">
        <item name="android:textColor">@color/hw_text_secondary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Challenge Detail Styles -->
    <style name="HW.Challenge.DayButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="HW.Challenge.DayButton.Active" parent="HW.Challenge.DayButton">
        <item name="android:background">@drawable/hw_day_button_active</item>
        <item name="android:textColor">@color/hw_text_white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HW.Challenge.DayButton.Inactive" parent="HW.Challenge.DayButton">
        <item name="android:background">@drawable/hw_day_button_inactive</item>
        <item name="android:textColor">@color/hw_text_secondary</item>
    </style>

    <!-- Day Button Styles -->
    <style name="DayButtonActive">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:background">@drawable/hw_day_button_active</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="DayButtonInactive" parent="DayButtonActive">
        <item name="android:background">@drawable/hw_day_button_inactive</item>
        <item name="android:textColor">#8a000000</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- Arrow and Trophy Icon Styles -->
    <style name="ArrowIcon">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:src">@drawable/ic_arrow_forward</item>
        <item name="android:tint">#ff004aff</item>
    </style>

    <style name="ArrowIconInactive" parent="ArrowIcon">
        <item name="android:tint">#8a000000</item>
    </style>

    <style name="TrophyIcon">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:src">@drawable/ic_trophy</item>
        <item name="android:tint">#ffffa000</item>
    </style>

    <style name="TrophyIconInactive" parent="TrophyIcon">
        <item name="android:tint">#8a000000</item>
    </style>
</resources>