<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="HomeWorkoutTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/hw_primary</item>
        <item name="colorPrimaryDark">@color/hw_primary_dark</item>
        <item name="colorAccent">@color/hw_accent</item>
        <item name="android:windowBackground">@color/hw_background</item>
        <item name="colorSurface">@color/hw_surface</item>
        <item name="colorOnSurface">@color/hw_text_primary</item>
    </style>

    <!-- Text Styles -->
    <style name="HW.Text.Title">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/hw_text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="HW.Text.Subtitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/hw_text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="HW.Text.Body">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/hw_text_primary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="HW.Text.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/hw_text_secondary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Button Styles -->
    <style name="HW.Button.Primary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/hw_button_primary</item>
        <item name="android:textColor">@color/hw_text_white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="HW.Button.Secondary" parent="HW.Button.Primary">
        <item name="android:background">@drawable/hw_button_secondary</item>
        <item name="android:textColor">@color/hw_primary</item>
    </style>

    <!-- Card Styles -->
    <style name="HW.Card">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">@color/hw_surface</item>
    </style>

    <style name="HW.Card.Challenge" parent="HW.Card">
        <item name="cardCornerRadius">16dp</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <!-- Calendar Styles -->
    <style name="HW.Calendar.Day">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_marginHorizontal">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/hw_text_secondary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="HW.Calendar.Day.Selected" parent="HW.Calendar.Day">
        <item name="android:textColor">@color/hw_primary</item>
        <item name="android:background">@drawable/hw_calendar_selected</item>
    </style>

    <!-- Tab Styles -->
    <style name="HW.Tab.Selected">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/hw_text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="HW.Tab.Unselected" parent="HW.Tab.Selected">
        <item name="android:textColor">@color/hw_text_secondary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Challenge Detail Styles -->
    <style name="HW.Challenge.DayButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="HW.Challenge.DayButton.Active" parent="HW.Challenge.DayButton">
        <item name="android:background">@drawable/hw_day_button_active</item>
        <item name="android:textColor">@color/hw_text_white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HW.Challenge.DayButton.Inactive" parent="HW.Challenge.DayButton">
        <item name="android:background">@drawable/hw_day_button_inactive</item>
        <item name="android:textColor">@color/hw_text_secondary</item>
    </style>
</resources>
