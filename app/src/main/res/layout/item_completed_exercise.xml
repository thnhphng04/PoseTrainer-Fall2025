<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="#ff2a3142">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Thumbnail/Icon -->
        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#ff1a1f2e">

            <ImageView
                android:id="@+id/iv_exercise_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_core"
                app:tint="#4d9df2"
                tools:src="@drawable/ic_core" />

        </androidx.cardview.widget.CardView>

        <!-- Exercise Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <!-- Exercise Name -->
            <TextView
                android:id="@+id/tv_exercise_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên bài"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginBottom="4dp"
                tools:text="Tên bài" />

            <!-- Exercise Level Badge -->
            <TextView
                android:id="@+id/tv_exercise_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cấp độ"
                android:textColor="#4d9df2"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="@drawable/badge_level_background"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:layout_marginBottom="6dp"
                tools:text="Cấp độ" />

            <!-- Exercise Duration -->
            <TextView
                android:id="@+id/tv_exercise_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⏱️ 25 min"
                android:textColor="#99ffffff"
                android:textSize="13sp"
                tools:text="⏱️ 25 min" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>