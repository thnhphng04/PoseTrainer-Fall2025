            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="04/11/2025 13:27"
                android:textSize="12sp"
                android:textColor="#888888" />
        </LinearLayout>
    </LinearLayout>

    <!-- Ná»™i dung bÃ i viáº¿t -->
    <TextView
