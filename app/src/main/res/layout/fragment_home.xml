<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff1a1f2e"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome back"
                android:textColor="#99ffffff"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="User"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/user_avatar_bg"
                    android:src="@drawable/profile"
                    android:scaleType="centerCrop" />

            </LinearLayout>

        </LinearLayout>

        <!-- Search Bar -->
        <androidx.cardview.widget.CardView
            android:id="@+id/search_bar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#ff2a3142"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Search Workout..."
                    android:textColor="#66ffffff"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_search"
                    app:tint="#66ffffff" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Body Parts Grid -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            android:nestedScrollingEnabled="false" />

        <!-- Category Tabs -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp">

                <TextView
                    android:id="@+id/chip_latest"
                    style="@style/CategoryChipSelected"
                    android:text="Latest Updates" />

                <TextView
                    android:id="@+id/chip_beginner"
                    style="@style/CategoryChip"
                    android:text="Beginner" />

                <TextView
                    android:id="@+id/chip_intermediate"
                    style="@style/CategoryChip"
                    android:text="Intermediate" />

                <TextView
                    android:id="@+id/chip_advanced"
                    style="@style/CategoryChip"
                    android:text="Advanced" />

            </LinearLayout>

        </HorizontalScrollView>

        <!-- Duration Filter Tabs -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp">

                <TextView
                    android:id="@+id/chip_1_7min"
                    style="@style/DurationChip"
                    android:text="1-7 min" />

                <TextView
                    android:id="@+id/chip_8_15min"
                    style="@style/DurationChip"
                    android:text="8-15 min" />

                <TextView
                    android:id="@+id/chip_15min_plus"
                    style="@style/DurationChip"
                    android:text=">15 min" />

                <TextView
                    android:id="@+id/chip_stretching"
                    style="@style/DurationChip"
                    android:text="Stretching &amp; Warm-up" />

            </LinearLayout>

        </HorizontalScrollView>

        <!-- Recommended Section Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="12dp"
            android:text="Bài tập dành cho bạn"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Featured Workouts Carousel -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_featured_workouts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:clipToPadding="false"
            android:paddingHorizontal="16dp"
            android:nestedScrollingEnabled="false" />

        <!-- Popular Goals Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="POPULAR GOALS"
                android:textColor="#4d9df2"
                android:textSize="12sp"
                android:textStyle="bold"
                android:letterSpacing="0.1" />

            <TextView
                android:id="@+id/btn_see_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="See All"
                android:textColor="#4d9df2"
                android:textSize="14sp"
                android:foreground="?android:attr/selectableItemBackground"
                android:padding="8dp" />

        </LinearLayout>

        <!-- Build Muscle Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="12dp"
            android:text="Build Muscle"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            android:text="116 workouts"
            android:textColor="#66ffffff"
            android:textSize="12sp" />

        <!-- Workout List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_workouts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>