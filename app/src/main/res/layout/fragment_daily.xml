<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Back Arrow -->
        <ImageView
            android:id="@+id/iv_back_arrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            android:tint="@color/white"
            android:padding="4dp" />

        <!-- Title -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ngày"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginStart="16dp" />

        <!-- Edit Button -->
        <TextView
            android:id="@+id/tv_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chỉnh sửa"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:padding="8dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

    <!-- Weekly Goal Section -->
    <LinearLayout
        android:id="@+id/weekly_goal_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/header">

        <TextView
            android:id="@+id/tv_weekly_goal_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mục tiêu hàng tuần"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Days Circles -->
        <LinearLayout
            android:id="@+id/days_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Monday -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="8dp">

                <FrameLayout
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginBottom="4dp">

                    <View
                        android:id="@+id/circle_1"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/circle_empty" />

                    <ImageView
                        android:id="@+id/iv_status_1"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_check"
                        android:visibility="gone" />

                </FrameLayout>

                <TextView
                    android:id="@+id/tv_day_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="T2"
                    android:textColor="@color/white"
                    android:textSize="10sp" />

            </LinearLayout>

            <!-- Tuesday -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="8dp">

                <FrameLayout
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginBottom="4dp">

                    <View
                        android:id="@+id/circle_2"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/circle_empty" />

                    <ImageView
                        android:id="@+id/iv_status_2"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_check"
                        android:visibility="gone" />

                </FrameLayout>

                <TextView
                    android:id="@+id/tv_day_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="T3"
                    android:textColor="@color/white"
                    android:textSize="10sp" />

            </LinearLayout>

            <!-- Wednesday -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="8dp">

                <FrameLayout
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginBottom="4dp">

                    <View
                        android:id="@+id/circle_3"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/circle_empty" />

                    <ImageView
                        android:id="@+id/iv_status_3"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_check"
                        android:visibility="gone" />

                </FrameLayout>

                <TextView
                    android:id="@+id/tv_day_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="T4"
                    android:textColor="@color/white"
                    android:textSize="10sp" />

            </LinearLayout>

            <!-- Thursday -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="8dp">

                <FrameLayout
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginBottom="4dp">

                    <View
                        android:id="@+id/circle_4"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/circle_empty" />

                    <ImageView
                        android:id="@+id/iv_status_4"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_check"
                        android:visibility="gone" />

                </FrameLayout>

                <TextView
                    android:id="@+id/tv_day_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="T5"
                    android:textColor="@color/white"
                    android:textSize="10sp" />

            </LinearLayout>

            <!-- Friday -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="8dp">

                <FrameLayout
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginBottom="4dp">

                    <View
                        android:id="@+id/circle_5"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/circle_empty" />

                    <ImageView
                        android:id="@+id/iv_status_5"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_check"
                        android:visibility="gone" />

                </FrameLayout>

                <TextView
                    android:id="@+id/tv_day_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="T6"
                    android:textColor="@color/white"
                    android:textSize="10sp" />

            </LinearLayout>

            <!-- Saturday -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="8dp">

                <FrameLayout
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginBottom="4dp">

                    <View
                        android:id="@+id/circle_6"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/circle_empty" />

                    <ImageView
                        android:id="@+id/iv_status_6"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_check"
                        android:visibility="gone" />

                </FrameLayout>

                <TextView
                    android:id="@+id/tv_day_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="T7"
                    android:textColor="@color/white"
                    android:textSize="10sp" />

            </LinearLayout>

            <!-- Sunday -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <FrameLayout
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginBottom="4dp">

                    <View
                        android:id="@+id/circle_7"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/circle_empty" />

                    <ImageView
                        android:id="@+id/iv_status_7"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_check"
                        android:visibility="gone" />

                </FrameLayout>

                <TextView
                    android:id="@+id/tv_day_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CN"
                    android:textColor="@color/white"
                    android:textSize="10sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Activities Section -->
    <androidx.cardview.widget.CardView
        android:id="@+id/activities_card"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:layout_marginTop="32dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@+id/weekly_goal_section"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Activities Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/tv_activities_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Các hoạt động"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_history"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lịch sử >"
                    android:textColor="@color/primary_blue"
                    android:textSize="14sp"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="8dp" />

            </LinearLayout>

            <!-- Activity Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thời gian"
                    android:textColor="@color/gray_text"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tv_calories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calo: kcal"
                    android:textColor="@color/gray_text"
                    android:textSize="14sp" />

            </LinearLayout>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <!-- Start Workout Button -->
                <Button
                    android:id="@+id/btn_start_workout"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Bắt đầu tập luyện"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:background="@drawable/button_primary"
                    android:layout_marginBottom="12dp" />

                <!-- Add Activity Button -->
                <Button
                    android:id="@+id/btn_add_activity"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Thêm hoạt động"
                    android:textColor="@color/primary_blue"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:background="@drawable/button_secondary" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>