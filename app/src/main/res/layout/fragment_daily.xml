<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/daily_background">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <!-- Back Arrow -->
        <ImageView
            android:id="@+id/iv_back_arrow"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:padding="5dp"
            android:src="@drawable/ic_arrow_back"
            android:tint="@color/daily_text_primary"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true" />

        <!-- Title -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/daily_title"
            android:textColor="@color/daily_text_primary"
            android:textSize="14sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- Edit Button -->
        <TextView
            android:id="@+id/tv_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:padding="6dp"
            android:text="@string/daily_edit"
            android:textColor="@color/daily_text_primary"
            android:textSize="11sp"
            android:textStyle="bold"
            android:maxLines="1" />

    </LinearLayout>

    <!-- Weekly Goal Card - IMPROVED VERSION -->
    <androidx.cardview.widget.CardView
        android:id="@+id/weekly_goal_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/daily_card_background"
        app:layout_constraintTop_toBottomOf="@+id/header"
        tools:layout_editor_absoluteX="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <!-- Title with icon -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸŽ¯"
                    android:textSize="14sp"
                    android:layout_marginEnd="5dp" />

                <TextView
                    android:id="@+id/tv_weekly_goal_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/daily_weekly_goal_title"
                    android:textColor="@color/daily_text_primary"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:maxLines="2"
                    android:ellipsize="end" />

            </LinearLayout>

            <!-- Days Circles -->
            <LinearLayout
                android:id="@+id/days_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp"
                android:paddingVertical="2dp">

                <!-- Monday -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <FrameLayout
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginBottom="3dp"
                        android:gravity="center">
                        <View
                            android:id="@+id/circle1"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:background="@drawable/circle_empty" />
                        <ImageView
                            android:id="@+id/iv_status1"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_check"
                            android:visibility="gone" />
                    </FrameLayout>
                    <TextView
                        android:id="@+id/tv_day1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="T2"
                        android:textColor="@color/daily_text_primary"
                        android:textSize="9sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:maxLines="2" />
                </LinearLayout>

                <!-- Tuesday -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <FrameLayout
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginBottom="3dp"
                        android:gravity="center">
                        <View
                            android:id="@+id/circle2"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:background="@drawable/circle_empty" />
                        <ImageView
                            android:id="@+id/iv_status2"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_check"
                            android:visibility="gone" />
                    </FrameLayout>
                    <TextView
                        android:id="@+id/tv_day2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="T3"
                        android:textColor="@color/daily_text_primary"
                        android:textSize="9sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:maxLines="2" />
                </LinearLayout>

                <!-- Wednesday -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <FrameLayout
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginBottom="3dp"
                        android:gravity="center">
                        <View
                            android:id="@+id/circle3"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:background="@drawable/circle_empty" />
                        <ImageView
                            android:id="@+id/iv_status3"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_check"
                            android:visibility="gone" />
                    </FrameLayout>
                    <TextView
                        android:id="@+id/tv_day3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="T4"
                        android:textColor="@color/daily_text_primary"
                        android:textSize="9sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:maxLines="2" />
                </LinearLayout>

                <!-- Thursday -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <FrameLayout
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginBottom="3dp"
                        android:gravity="center">
                        <View
                            android:id="@+id/circle4"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:background="@drawable/circle_empty" />
                        <ImageView
                            android:id="@+id/iv_status4"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_check"
                            android:visibility="gone" />
                    </FrameLayout>
                    <TextView
                        android:id="@+id/tv_day4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="T5"
                        android:textColor="@color/daily_text_primary"
                        android:textSize="9sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:maxLines="2" />
                </LinearLayout>

                <!-- Friday -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <FrameLayout
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginBottom="3dp"
                        android:gravity="center">
                        <View
                            android:id="@+id/circle5"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:background="@drawable/circle_empty" />
                        <ImageView
                            android:id="@+id/iv_status5"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_check"
                            android:visibility="gone" />
                    </FrameLayout>
                    <TextView
                        android:id="@+id/tv_day5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="T6"
                        android:textColor="@color/daily_text_primary"
                        android:textSize="9sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:maxLines="2" />
                </LinearLayout>

                <!-- Saturday -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <FrameLayout
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginBottom="3dp"
                        android:gravity="center">
                        <View
                            android:id="@+id/circle6"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:background="@drawable/circle_empty" />
                        <ImageView
                            android:id="@+id/iv_status6"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_check"
                            android:visibility="gone" />
                    </FrameLayout>
                    <TextView
                        android:id="@+id/tv_day6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="T7"
                        android:textColor="@color/daily_text_primary"
                        android:textSize="9sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:maxLines="2" />
                </LinearLayout>

                <!-- Sunday -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <FrameLayout
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginBottom="3dp"
                        android:gravity="center">
                        <View
                            android:id="@+id/circle7"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:background="@drawable/circle_empty" />
                        <ImageView
                            android:id="@+id/iv_status7"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_check"
                            android:visibility="gone" />
                    </FrameLayout>
                    <TextView
                        android:id="@+id/tv_day7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CN"
                        android:textColor="@color/daily_text_primary"
                        android:textSize="9sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:maxLines="2" />
                </LinearLayout>

            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/daily_text_primary"
                android:alpha="0.15"
                android:layout_marginBottom="8dp" />

            <!-- Weekly Progress -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“Š"
                    android:textSize="14sp"
                    android:layout_marginEnd="6dp" />

                <TextView
                    android:id="@+id/tv_weekly_progress"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/daily_weekly_progress"
                    android:textColor="@color/daily_text_primary"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end" />

            </LinearLayout>

            <ProgressBar
                android:id="@+id/progress_bar_weekly"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:max="100"
                android:progress="0"
                android:progressTint="@color/daily_progress_blue"
                android:progressBackgroundTint="@color/daily_text_primary"
                android:backgroundTintMode="src_over"
                android:alpha="1.0" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Activities Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/activities_card"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/daily_card_background"
        app:layout_constraintTop_toBottomOf="@+id/weekly_goal_card"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="12dp">

                <!-- Activities Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ’ª"
                        android:textSize="16sp"
                        android:layout_marginEnd="6dp" />

                    <TextView
                        android:id="@+id/tv_activities_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/daily_activities_title"
                        android:textColor="@color/daily_text_primary"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:ellipsize="end" />

                    <TextView
                        android:id="@+id/tv_history"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/daily_history"
                        android:textColor="@color/daily_primary_blue"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="5dp"
                        android:maxLines="1" />

                </LinearLayout>

                <!-- Activity Info Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/daily_background">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp"
                        android:gravity="center_vertical">

                        <!-- Time Info -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="â±ï¸"
                                android:textSize="14sp"
                                android:layout_marginBottom="3dp" />

                            <TextView
                                android:id="@+id/tv_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/daily_time_default"
                                android:textColor="@color/daily_text_primary"
                                android:textSize="10sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="2dp"
                                android:maxLines="1"
                                android:ellipsize="end" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/daily_time_label"
                                android:textColor="@color/daily_text_secondary"
                                android:textSize="9sp"
                                android:maxLines="1" />

                        </LinearLayout>

                        <!-- Divider -->
                        <View
                            android:layout_width="1dp"
                            android:layout_height="35dp"
                            android:background="@color/daily_divider"
                            android:alpha="0.5" />

                        <!-- Calories Info -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_marginStart="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ”¥"
                                android:textSize="14sp"
                                android:layout_marginBottom="3dp" />

                            <TextView
                                android:id="@+id/tv_calories"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/daily_calories_default"
                                android:textColor="@color/daily_text_primary"
                                android:textSize="10sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="2dp"
                                android:maxLines="1"
                                android:ellipsize="end" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/daily_calories_label"
                                android:textColor="@color/daily_text_secondary"
                                android:textSize="9sp"
                                android:maxLines="1" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Sessions List -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“‹"
                        android:textSize="14sp"
                        android:layout_marginEnd="5dp" />

                    <TextView
                        android:id="@+id/tv_sessions_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/daily_sessions_title"
                        android:textColor="@color/daily_text_primary"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:ellipsize="end" />

                </LinearLayout>

                <!-- Empty State -->
                <LinearLayout
                    android:id="@+id/layout_empty_state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“­"
                        android:textSize="36sp"
                        android:layout_marginBottom="10dp" />

                    <TextView
                        android:id="@+id/tv_empty_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/daily_empty_state"
                        android:textColor="@color/daily_text_secondary"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:maxLines="2"
                        android:ellipsize="end" />

                </LinearLayout>

                <!-- RecyclerView for Sessions -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view_sessions"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:nestedScrollingEnabled="false"
                    android:layout_marginBottom="10dp" />

                <!-- Action Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <!-- View Schedule Button -->
                    <Button
                        android:id="@+id/btn_view_schedule"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="@string/daily_view_schedule"
                        android:textColor="@color/daily_text_primary"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:background="@drawable/button_primary"
                        android:elevation="0dp"
                        android:layout_marginBottom="6dp"
                        android:maxLines="1"
                        android:ellipsize="end" />

                    <!-- Add Activity Button -->
                    <Button
                        android:id="@+id/btn_add_activity"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="@string/daily_add_activity"
                        android:textColor="@color/daily_primary_blue"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:background="@drawable/button_secondary"
                        android:elevation="0dp"
                        android:maxLines="1"
                        android:ellipsize="end" />

                </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>