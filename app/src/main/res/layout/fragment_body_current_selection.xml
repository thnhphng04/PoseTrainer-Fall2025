<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainColor"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center_horizontal">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Body hiện tại của bạn"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:letterSpacing="0.01"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chọn 1 hình dáng phù hợp nhất với bạn"
                android:textSize="15sp"
                android:textColor="#B0B0B0"
                android:alpha="0.8"/>
        </LinearLayout>

        <!-- Container for cards - centered -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center">

            <!-- Hàng 1: 3 cards -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="12dp">

                <!-- 1. Very Lean -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_body_1"
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:tag="very_lean"
                    app:cardBackgroundColor="#252B47"
                    app:cardCornerRadius="20dp"
                    app:strokeWidth="0dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_marginBottom="12dp">

                            <View
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_gravity="center"
                                android:background="@drawable/circle_background_light"/>

                            <ImageView
                                android:id="@+id/ivBody1"
                                android:layout_width="55dp"
                                android:layout_height="85dp"
                                android:layout_gravity="center"
                                android:scaleType="fitCenter"
                                android:src="@drawable/female_body_very_lean"
                                android:contentDescription="Very Lean" />
                        </FrameLayout>

                        <TextView
                            android:id="@+id/tvBody1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rất gầy"
                            android:textColor="@color/white"
                            android:textSize="13sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- 2. Lean -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_body_2"
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:tag="lean"
                    app:cardBackgroundColor="#252B47"
                    app:cardCornerRadius="20dp"
                    app:strokeWidth="0dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_marginBottom="12dp">

                            <View
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_gravity="center"
                                android:background="@drawable/circle_background_light"/>

                            <ImageView
                                android:id="@+id/ivBody2"
                                android:layout_width="55dp"
                                android:layout_height="85dp"
                                android:layout_gravity="center"
                                android:scaleType="fitCenter"
                                android:src="@drawable/female_body_lean"
                                android:contentDescription="Lean" />
                        </FrameLayout>

                        <TextView
                            android:id="@+id/tvBody2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gầy"
                            android:textColor="@color/white"
                            android:textSize="13sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- 3. Normal -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_body_3"
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:tag="normal"
                    app:cardBackgroundColor="#252B47"
                    app:cardCornerRadius="20dp"
                    app:strokeWidth="0dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_marginBottom="12dp">

                            <View
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_gravity="center"
                                android:background="@drawable/circle_background_light"/>

                            <ImageView
                                android:id="@+id/ivBody3"
                                android:layout_width="55dp"
                                android:layout_height="85dp"
                                android:layout_gravity="center"
                                android:scaleType="fitCenter"
                                android:src="@drawable/female_body_normal"
                                android:contentDescription="Normal" />
                        </FrameLayout>

                        <TextView
                            android:id="@+id/tvBody3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bình thường"
                            android:textColor="@color/white"
                            android:textSize="13sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!-- Hàng 2: 2 cards (centered) -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <!-- 4. Overweight -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_body_4"
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:tag="overweight"
                    app:cardBackgroundColor="#252B47"
                    app:cardCornerRadius="20dp"
                    app:strokeWidth="0dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_marginBottom="12dp">

                            <View
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_gravity="center"
                                android:background="@drawable/circle_background_light"/>

                            <ImageView
                                android:id="@+id/ivBody4"
                                android:layout_width="55dp"
                                android:layout_height="85dp"
                                android:layout_gravity="center"
                                android:scaleType="fitCenter"
                                android:src="@drawable/female_body_overweight"
                                android:contentDescription="Overweight" />
                        </FrameLayout>

                        <TextView
                            android:id="@+id/tvBody4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Thừa cân"
                            android:textColor="@color/white"
                            android:textSize="13sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- 5. Obese -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_body_5"
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:tag="obese"
                    app:cardBackgroundColor="#252B47"
                    app:cardCornerRadius="20dp"
                    app:strokeWidth="0dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_marginBottom="12dp">

                            <View
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_gravity="center"
                                android:background="@drawable/circle_background_light"/>

                            <ImageView
                                android:id="@+id/ivBody5"
                                android:layout_width="55dp"
                                android:layout_height="85dp"
                                android:layout_gravity="center"
                                android:scaleType="fitCenter"
                                android:src="@drawable/female_body_obese"
                                android:contentDescription="Obese" />
                        </FrameLayout>

                        <TextView
                            android:id="@+id/tvBody5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Béo phì"
                            android:textColor="@color/white"
                            android:textSize="13sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>