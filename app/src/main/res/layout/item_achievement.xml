<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:background="#ff1a1f2e"
    android:layout_marginBottom="8dp">

    <ImageView
        android:id="@+id/iv_achievement_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:scaleType="centerCrop"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_achievement_emoji"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:textSize="32sp"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_achievement_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Tên thành tích"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_achievement_emoji"
        app:layout_constraintEnd_toStartOf="@+id/iv_locked" />

    <TextView
        android:id="@+id/tv_achievement_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Mô tả thành tích"
        android:textSize="12sp"
        android:textColor="#99ffffff"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_achievement_name"
        app:layout_constraintStart_toStartOf="@+id/tv_achievement_name"
        app:layout_constraintEnd_toEndOf="@+id/tv_achievement_name" />

    <ImageView
        android:id="@+id/iv_locked"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_lock"
        android:tint="#666666"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_unlocked_badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="✓"
        android:textSize="20sp"
        android:textColor="#4d9df2"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

