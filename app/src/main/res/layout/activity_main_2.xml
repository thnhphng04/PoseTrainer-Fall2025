<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff6f8fa"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="12dp">

        <!-- Header Section with Title and PRO Badge -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="HOME WORKOUT"
                android:textColor="#de000000"
                android:textSize="22sp"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.02" />

            <ImageView
                android:id="@+id/iv_pro_badge"
                android:layout_width="73dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/pro_badge_bg"
                android:contentDescription="PRO Badge" />

        </RelativeLayout>

        <!-- Weekly Goal Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="8dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Weekly goal"
                android:textColor="#de000000"
                android:textSize="18sp"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0/4"
                android:textColor="#ff004aff"
                android:textSize="18sp"
                android:fontFamily="sans-serif-medium" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="4dp"
                android:src="@drawable/ic_edit"
                android:contentDescription="Edit" />

        </LinearLayout>

        <!-- Calendar Days Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            android:gravity="center">

            <TextView style="@style/CalendarDay" android:text="21" />
            <TextView style="@style/CalendarDay" android:text="22" />
            <TextView style="@style/CalendarDay" android:text="23" />
            <TextView style="@style/CalendarDay" android:text="24" />
            <TextView style="@style/CalendarDaySelected" android:text="25" />
            <TextView style="@style/CalendarDay" android:text="26" />
            <TextView style="@style/CalendarDay" android:text="27" />

        </LinearLayout>

        <!-- Motivational Message Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#fff5f6f8">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/trainer_avatar"
                    android:background="@drawable/circle_bg" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:text="Hi, my friend! Let's continue crushing your goals!"
                    android:textColor="#de000000"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif"
                    android:lineSpacingExtra="2dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- 7x4 Challenge Section Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="12dp"
            android:text="7x4 Challenge"
            android:textColor="#de000000"
            android:textSize="20sp"
            android:fontFamily="sans-serif-medium" />

        <!-- Challenge Cards Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="8dp"
            android:layout_marginBottom="24dp">

            <!-- Full Body Challenge Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#ff004aff"
                android:foreground="?android:attr/selectableItemBackground">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tv_full_body_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:text="FULL\nBODY 7X4\nCHALLENGE"
                        android:textColor="#ffffff"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:lineSpacingMultiplier="0.9" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/btn_start_full"
                        android:layout_marginBottom="16dp"
                        android:text="Start your body-toning journey to target all muscle groups and build your dream body in 4 weeks!"
                        android:textColor="#e6ffffff"
                        android:textSize="12sp"
                        android:lineSpacingExtra="2dp" />

                    <TextView
                        android:id="@+id/btn_start_full"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/white_button_bg"
                        android:text="START"
                        android:textColor="#ff004aff"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:foreground="?android:attr/selectableItemBackground" />

                    <!-- Trainer Image -->
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/trainer_full_body"
                        android:scaleType="centerCrop" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <!-- Lower Body Challenge Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#ff0075ff"
                android:foreground="?android:attr/selectableItemBackground">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tv_lower_body_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:text="LOWER\nBODY 7X4\nCHALLENGE"
                        android:textColor="#ffffff"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:lineSpacingMultiplier="0.9" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/btn_start_lower"
                        android:layout_marginBottom="16dp"
                        android:text="In just 4 weeks, power up your legs, boost lower body strength, and enhance your overall strength!"
                        android:textColor="#e6ffffff"
                        android:textSize="12sp"
                        android:lineSpacingExtra="2dp" />

                    <TextView
                        android:id="@+id/btn_start_lower"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/white_button_bg"
                        android:text="START"
                        android:textColor="#ff0075ff"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:foreground="?android:attr/selectableItemBackground" />

                    <!-- Trainer Image -->
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/trainer_lower_body"
                        android:scaleType="centerCrop" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Workout Level Tabs -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                style="@style/TabSelected"
                android:text="Beginner" />

            <TextView
                style="@style/TabUnselected"
                android:layout_marginStart="24dp"
                android:text="Intermediate" />

            <TextView
                style="@style/TabUnselected"
                android:layout_marginStart="24dp"
                android:text="Advanced" />

        </LinearLayout>

        <!-- ABS Beginner Workout Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            android:foreground="?android:attr/selectableItemBackground">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- Background Image -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/abs_workout_bg"
                    android:scaleType="centerCrop" />

                <!-- Overlay -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/dark_overlay" />

                <!-- Content -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ABS BEGINNER"
                        android:textColor="#ffffff"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="20 MINS â€¢ 16 EXERCISES"
                        android:textColor="#ccffffff"
                        android:textSize="12sp" />

                </LinearLayout>

                <!-- Play Button -->
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_play_circle"
                    android:background="@drawable/play_button_bg" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>