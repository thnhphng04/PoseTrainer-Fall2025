<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ff2a3142"
    android:padding="24dp">

    <ImageView
        android:id="@+id/dialog_notification_icon"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/ic_notifications"
        android:tint="#4d9df2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:src="@drawable/ic_notifications" />

    <TextView
        android:id="@+id/dialog_ai_badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="✨ AI"
        android:textSize="10sp"
        android:textColor="@android:color/white"
        android:background="@drawable/badge_ai_background"
        android:paddingHorizontal="6dp"
        android:paddingVertical="2dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/dialog_notification_icon"
        app:layout_constraintEnd_toEndOf="@id/dialog_notification_icon"
        app:layout_constraintBottom_toBottomOf="@id/dialog_notification_icon"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/dialog_notification_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:maxLines="3"
        android:ellipsize="end"
        app:layout_constraintTop_toTopOf="@id/dialog_notification_icon"
        app:layout_constraintStart_toEndOf="@id/dialog_notification_icon"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Sắp đến giờ tập luyện!" />

    <TextView
        android:id="@+id/dialog_notification_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="14sp"
        android:textColor="#99ffffff"
        app:layout_constraintTop_toBottomOf="@id/dialog_notification_title"
        app:layout_constraintStart_toStartOf="@id/dialog_notification_title"
        app:layout_constraintEnd_toEndOf="@id/dialog_notification_title"
        tools:text="5 phút trước" />

    <TextView
        android:id="@+id/dialog_notification_body"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:lineSpacingMultiplier="1.3"
        app:layout_constraintTop_toBottomOf="@id/dialog_notification_time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Còn 15 phút nữa là đến giờ tập luyện vào Thứ hai. Hãy chuẩn bị sẵn sàng và tập trung vào bài tập của bạn!" />

    <TextView
        android:id="@+id/dialog_notification_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="12sp"
        android:textColor="#66ffffff"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/dialog_notification_body"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Loại: Nhắc nhở tập luyện"
        tools:visibility="visible" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/dialog_view_detail_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Xem chi tiết"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@drawable/button_primary"
        android:paddingVertical="14dp"
        android:visibility="gone"
        app:cornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/dialog_notification_type"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:visibility="visible" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/dialog_close_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Đóng"
        android:textSize="14sp"
        android:textColor="#99ffffff"
        android:background="@android:color/transparent"
        android:paddingVertical="10dp"
        app:layout_constraintTop_toBottomOf="@id/dialog_view_detail_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

