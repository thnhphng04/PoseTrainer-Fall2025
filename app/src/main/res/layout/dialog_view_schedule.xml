                </androidx.core.widget.NestedScrollView>

            </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

            <!-- Empty State -->
            <LinearLayout
                android:id="@+id/layout_empty_schedule"
                android:layout_width="match_parent"
